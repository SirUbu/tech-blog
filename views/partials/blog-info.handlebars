<article class="blog bg-info p-2 rounded">
    <a href="/blog/{{ id }}" class="title">{{ title }}</a>
    <div class="context">{{ context }}</div>
    <div class="meta">
        {{ feel_count }} {{ format_plural "feel" feel_count }}
        |
        Blogger: <span class="blogger-name">{{ blogger.username }}</span> on {{ format_date created_at }}
        |
        <a href="/blog/{{ id }}">{{ comments.length }} {{ format_plural "comment" comments.length }}</a>
    </div>
</article>